<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wz="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <!--tabs-->
    <com.astuetz.PagerSlidingTabStripExtends
        wz:pstsIndicatorColor="@color/tab_indicator_selected"

        wz:pstsSelectedTabTextColor="@color/tab_text_selected"
        wz:pstsTabTextColor="@color/tab_text_normal"

        wz:pstsSelectedTabTextSize="18sp"
        wz:pstsTabTextSize="16sp"


        android:id="@+id/main_tabs"
        android:layout_width="match_parent"
        android:layout_height="48dip"/>

    <!--viewpager-->

    <android.support.v4.view.ViewPager
        android:id="@+id/main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>
