<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--应用的下载模块-->
    <FrameLayout
        android:id="@+id/detail_fl_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/detail_bottom_bg">

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/detail_fl_download">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--应用的信息模块-->
            <FrameLayout
                android:id="@+id/detail_fl_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </FrameLayout>
            <!--应用的安全模块-->
            <FrameLayout
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:id="@+id/detail_fl_safe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </FrameLayout>
            <!--应用的截图模块-->
            <FrameLayout
                android:id="@+id/detail_fl_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </FrameLayout>
            <!--应用的描述模块-->
            <FrameLayout
                android:id="@+id/detail_fl_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </FrameLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>